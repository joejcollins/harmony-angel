<Book xmlns="https://joejcollins.github.io/CookML.xsd">
  <Menu Title="Spare Recipes">

    <Recipe Title="Onion pizza" Meals="2">
      <Index>
        Pizza<Sub>Onion</Sub>
      </Index>
      <Stage>
        In a <Utensil Name="wok" /> slowly fry
        <Vegetable Quantity="1000" Unit="g" Name="onions" Process="chopped"/>
        and
        <Vegetable Quantity="2" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="3" Unit="tbsp" Name="oil" />
        until brown.
      </Stage>
      <Stage>
        Spread on <Grocery Quantity="2" Name="pizza bases" />
        then sprinkle with
        <Grocery Quantity="200" Unit="g" Name="pitted olives" />,
        <Grocery Quantity="100" Unit="g" Name="anchovy fillets" />
        and
        <Check Quantity="1" Unit="tsp" Name="mixed herbs" />.
        Bake <Temperature Level="high" /> 20 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Okonomiyaki (untested)" Meals="2">
      <Stage>
        In a <Utensil Name="wok"/>
        (in <Check Quantity="3" Name="oil" Unit="tbsp" />)
        fry
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="sliced"/>
        and
        <Vegetable Quantity="3" Unit="cm" Name="ginger" Process="grated"/>
        until the onions brown.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="1" Unit="cube" Name="stock" Process="crumbled"/>
        and
        <Water Quantity="100" Unit="ml" Name="boiling water"/>
        then cool.
      </Stage>
      <Stage>
        In a bowl mix
        <Dairy Quantity="2" Name="eggs" Process="beaten"/>,
        <Check Quantity="100" Unit="g" Name="flour"/>
        and the cooled stock.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="50" Unit="g" Name="potatoes" Process="grated" />,
        <Vegetable Quantity="300" Unit="g" Name="cabbage" Process="shredded"/>,
        and
        <Dairy Quantity="2" Name="eggs" />.
        and fry as pancakes.
        Half way through make a dip in the pancakes and break in
      </Stage>
      <Stage>
        Serve with
        <Vegetable Quantity="50" Unit="g" Name="spring onions" Process="chopped"/>,
        <Grocery Name="mayonaise"/>
        and
        <Check Name="lime pickle"/>.
      </Stage>
    </Recipe>

    <Recipe Title="Hangover Noodles" Meals="1">
      <Stage>
        In a <Utensil Name="pan" />
        put
        <Grocery Quantity="200" Unit="g" Name="noodles"/>,
        <Vegetable Quantity="400" Unit="g" Name="broccoli" Process="flourettes"/>
        <Vegetable Quantity="400" Unit="g" Name="chinese cabbage" Process="sliced"/>
        <Vegetable Quantity="200" Unit="g" Name="mange tout" Process="halved"/>
        pour on <Water Quantity="800" Unit="ml" Name="boiling water"/>,
        cover and simmer for 5 minutes, then drain.
      </Stage>
      <Stage>
        In a <Utensil Name="bowl"/> mix
        <Vegetable Quantity="2" Unit="cloves" Name="garlic" Process="crushed"/>,
        <Vegetable Quantity="3" Unit="cm" Name="ginger" Process="grated"/>,
        <Check Quantity="2" Unit="tbsp" Name="soy sauce" />,
        <Check Quantity="3" Unit="tbsp" Name="sesame oil" /> and
        <Check Quantity="3" Unit="tbsp" Name="wine vinegar" />.
      </Stage>
      <Stage>
        In a <Utensil Name="frying"/> fry
        <Dairy Quantity="2" Name="eggs" />
        in
        <Check Quantity="1" Unit="tbsp" Name="sesame oil" />.
      </Stage>
      <Stage>
        Toss the noodles in the soy sauce dressing.
        Serve with fried eggs on top.
      </Stage>
    </Recipe>

    <Recipe Title="Jungle Noodles" Meals="1">
      <Stage>
        <Staple Name="noodles"/>
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="120" Unit="g" Name="can sardines" Process="mashed"/>
        and
        <Check Quantity="1" Unit="tsp" Name="soy sauce" />.
      </Stage>
    </Recipe>

    <Recipe Title="Aubergine and chickpeas" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="700" Unit="g" Name="onions" Process="chopped"/> in
        <Grocery Quantity="7" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="1000" Unit="g" Name="aubergine" Process="cubed"/>
        and fry until aubergines are done.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="canned ckickpeas" Process="drained"/>,
        <Grocery Quantity="400" Unit="g" Name="canned tomatoes" Process="chopped"/>
        and
        <Grocery Quantity="1" Unit="" Name="stock cube" Process="crumbled"/>.
        Put in <Utensil Name="casserole" /> and bake \med 40 minutes.
      </Stage>
      <Stage>
        <Staple Name="white rice" />
      </Stage>
    </Recipe>

    <Recipe Title="Mackerell Hash" Meals="2">
      <Stage>
        In a <Utensil Name="pan" /> boil
        <Vegetable Quantity="1000" Unit="g" Name="potatoes" Process="diced" />
        until done,
        then drain.
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> heat
        <Check Quantity="3" Unit="tbsp" Name="oil" />
        and
        <Check Quantity="1" Unit="tbsp" Name="mustard seeds" />
        until they start to pop.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="300" Unit="g" Name="red pepper" Process="sliced"/>,
        <Vegetable Quantity="300" Unit="g" Name="mushrooms" Process="sliced"/>,
        <Vegetable Quantity="250" Unit="g" Name="can mackerel" Process="chopped"/>
        and
        <Vegetable Quantity="400" Unit="g" Name="onions" Process="chopped"/>
        and fry until done.
      </Stage>
      <Stage>
        Stir in the potatoes
        and warm through.
      </Stage>
    </Recipe>

    <Recipe Title="Garlic beans" Meals="1">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="3" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="1" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="can baked beans" />
        and warm through.
      </Stage>
      <Stage>
        Serve with
        <Grocery Quantity="4" Unit="" Name="pita bread" Process="warmed"/>.
      </Stage>
    </Recipe>

    <Recipe Title="Tomato spaghetti" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="300" Unit="g" Name="onions" Process="chopped"/>
        and
        <Vegetable Quantity="3" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="3" Unit="tbsp" Name="oil" />
        for 1 minute.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="can tomatoes"/>
        <Grocery Quantity="2" Unit="tsp" Name="sugar" />,
        the juice of <Vegetable Quantity="1" Unit="" Name="lemon" />,
        <Check Quantity="1" Unit="tsp" Name="basil" />
        and simmer for 30 minutes.
      </Stage>
      <Stage>
        <Staple Name="spaghetti"/>
      </Stage>
    </Recipe>

    <Recipe Title="Peas and bacon" Meals="1">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>,
        <Meat Quantity="250" Unit="g" Name="bacon" Process="chopped"/>
        in
        <Grocery Quantity="1" Unit="tbsp" Name="oil" />
        until browned.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="800" Unit="g" Name="frozen peas" />
        and warm through.
      </Stage>
    </Recipe>

    <Recipe Title="Curry Ethiopian style" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>
        and
        <Vegetable Quantity="2" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        until brown.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="1" Unit="tsp" Name="paprika" />,
        <Check Quantity="2" Unit="tbsp" Name="curry powder" />,
        <Grocery Quantity="300" Unit="g" Name="red lentils" />
        and
        <Water Quantity="1000" Unit="ml" Name="cold water" />
        and simmer for 30 minutes.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="2" Unit="tbsp" Name="wine vinegar" />
        and simmer for 5 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Tagliatelli and bacon" Meals="1">
      <Stage>
        <Staple Name="tagliatelli"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Meat Quantity="50" Unit="g" Name="bacon" Process="chopped"/>
        without oil until brown.
      </Stage>
      <Stage>
        Stir in
        <Dairy Quantity="100" Unit="ml" Name="double cream" />,
        warm
        and
        then add the drained pasta.
      </Stage>
      <Stage>
        Warm and sprinkle with
        <Grocery Quantity="50" Unit="g" Name="grated parmesan" />.
      </Stage>
    </Recipe>

    <Recipe Title="Vegetable and butter bean pie" Meals="2">
      <Stage>
        <Staple Name="baked potatoes"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>,
        <Vegetable Quantity="400" Unit="g" Name="carrots" Process="sliced"/>,
        <Vegetable Quantity="400" Unit="g" Name="leeks" Process="sliced"/>,
        <Vegetable Quantity="150" Unit="g" Name="mushrooms" Process="sliced"/>
        in
        <Check Quantity="3" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="can butter beans" Process="drained"/>,
        <Grocery Quantity="400" Unit="g" Name="can tomatoes" Process="chopped"/>,
        <Check Quantity="1" Unit="tsp" Name="mixed herbs" />,
        <Check Quantity="1" Unit="tbsp" Name="flour" />,
        <Check Quantity="2" Name="stock cube" Process="crumbled"/>
        and
        <Water Quantity="2" Unit="tbsp" Name="water cold" />
        and warm through.
      </Stage>
      <Stage>
        Put in a <Utensil Name="casserole" />
        and
        cover with
        <Grocery Quantity="1" Unit="pack" Name="flakey pastry" Process="rolled"/>
        and
        bake \med for 30 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Coconut chickpeas" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>
        in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="can chickpeas" Process="undrained"/> (mashed),
        <Vegetable Quantity="300" Unit="g" Name="tomatoes" Process="chopped"/>,
        <Check Quantity="1" Unit="tsp" Name="ground coriander" />,
        <Check Quantity="2" Unit="tsp" Name="ground turmeric" />,
        <Check Quantity="50" Unit="g" Name="creamed coconut" Process="crumbled"/>
        and
        <Check Quantity="1" Unit="tsp" Name="chilli powder" />
        and simmer for 10 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Meat and potatoes Mexican style" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> mix
        <Meat Quantity="400" Unit="g" Name="minced meat" />,
        <Vegetable Quantity="400" Unit="g" Name="onions" Process="chopped"/>
        <Vegetable Quantity="150" Unit="g" Name="red peppers" Process="chopped"/>
        and
        <Vegetable Quantity="1" Unit="clove" Name="garlic" Process="crushed"/>
        and fry until done.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="can tomatoes" Process="chopped"/>,
        <Grocery Quantity="200" Unit="g" Name="can sweetcorn" Process="drained"/>,
        <Check Quantity="1" Unit="tbsp" Name="honey" />
        and
        <Vegetable Quantity="2" Name="red chillis" Process="chopped"/>.
      </Stage>
      <Stage>
        Put in a <Utensil Name="casserole" />
        and cover with a layer of
        <Vegetable Quantity="1000" Unit="g" Name="potatoes" Process="sliced"/>
        and sprinkle with
        <Dairy Quantity="50" Unit="g" Name="cheese" Process="grated"/>.
        Cover and bake \med for 50 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Cashew curry" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="400" Unit="g" Name="onions" Process="sliced"/>
        and
        <Vegetable Quantity="3" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="3" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="1" Unit="tbsp" Name="curry powder" />
        and
        <Grocery Quantity="250" Unit="g" Name="cashew nuts" />
        and simmer for 5 minutes.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="100" Unit="g" Name="creamed coconut" Process="crumbled"/>
        and
        <Water Quantity="200" Unit="ml" Name="cold water" />
        and simmer for 10 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Kedgeree" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        Stir in
        <Meat Quantity="400" Unit="g" Name="kippers" Process="chopped"/>,
        <Dairy Quantity="25" Unit="g" Name="butter" />,
        <Check Quantity="1" Unit="tsp" Name="mustard" />,
        <Dairy Quantity="4" Unit="" Name="eggs" Process="soft boiled"/>
        and
        <Check Quantity="0.5" Unit="tsp" Name="chilli powder" />.
      </Stage>
    </Recipe>

    <Recipe Title="Chilli bean stew" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="400" Unit="g" Name="onions" Process="sliced"/>
        and
        <Vegetable Quantity="4" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="250" Unit="g" Name="celery" Process="chopped"/>
        and
        <Vegetable Quantity="150" Unit="g" Name="red pepper" Process="chopped"/>
        and
        cook for 5 minutes.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="can tomatoes" Process="chopped"/>,
        <Grocery Quantity="400" Unit="g" Name="can red beans" />,
        <Grocery Quantity="75" Unit="g" Name="tomato puree" />,
        <Vegetable Quantity="1" Unit="" Name="green chilli" Process="chopped"/>,
        <Check Quantity="1" Unit="cube" Name="stock" Process="crumbled"/>
        and
        <Water Quantity="7" Unit="tbsp" Name="cold water" />.
        and simmer for 5 minutes.
      </Stage>
      <Stage>
        Put in a <Utensil Name="casserole" /> and layer with
        <Vegetable Quantity="1000" Unit="g" Name="potatoes" Process="sliced"/>
        Sprinkle with
        <Dairy Quantity="200" Unit="g" Name="cheddar cheese" Process="grated"/>.
        and bake \med for 60 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Potato and cheese bake" Meals="2">
      <Stage>
        In a <Utensil Name="pan" /> boil
        <Vegetable Quantity="2000" Unit="g" Name="potatoes" Process="sliced"/>
        for 15 minutes,
        then drain.
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="800" Unit="g" Name="onions" Process="sliced"/>
        and
        <Meat Quantity="200" Unit="g" Name="bacon" Process="chopped"/>
        in
        <Check Quantity="4" Unit="tbsp" Name="oil" />
        until bacon done.
      </Stage>
      <Stage>
        Layer the potatoes, onions and
        <Dairy Quantity="400" Unit="g" Name="cheese" Process="grated"/>
        in a <Utensil Name="casserole" />
        then bake \med for 30 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Peanut butter and black eyed bean stew" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" />,
        fry, in <Check Quantity="2" Unit="tbsp" Name="oil" />
        <Vegetable Quantity="200" Unit="g" Name="onion" Process="chopped"/>
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="2" Unit="tbsp" Name="flour" />,
        <Grocery Quantity="400" Unit="g" Name="can black eyed beans" Process="undrained"/>,
        <Grocery Quantity="2" Unit="tbsp" Name="peanut butter" />
        and simmer for 5 minutes.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="4" Unit="" Name="tomatoes" Process="chopped"/>
        the juice of
        <Vegetable Quantity="1" Unit="" Name="lemon" />,
        and
        simmer for 15 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Vegetable crumble" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="400" Unit="g" Name="onions" Process="chopped"/>,
        <Vegetable Quantity="4" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="3" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="3" Unit="tsp" Name="miso" />,
        <Check Quantity="1" Unit="" Name="stock cube" Process="crumbled"/>,
        <Water Quantity="300" Unit="ml" Name="water" />,
        <Vegetable Quantity="1000" Unit="g" Name="potatoes" Process="chopped"/>,
        <Vegetable Quantity="500" Unit="g" Name="parsnips" Process="chopped"/>,
        <Vegetable Quantity="500" Unit="g" Name="carrots" Process="chopped"/>
        and
        <Grocery Quantity="400" Unit="g" Name="canned tomatoes" Process="chopped"/>
        then put in a <Utensil Name="casserole" />.
      </Stage>
      <Stage>
        In a <Utensil Name="bowl" /> mix
        <Check Quantity="300" Unit="g" Name="flour" />,
        <Dairy Quantity="150" Unit="g" Name="margarine" />,
        <Check Quantity="100" Unit="g" Name="chopped nuts" />,
        and
        <Check Quantity="100" Unit="g" Name="sunflower seeds" />
        and layer on top of <Utensil Name="casserole" />,
        then bake \med for 60 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Tagliatelli and mushrooms" Meals="1">
      <Stage>
        <Staple Name="tagliatelli"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="150" Unit="g" Name="onion" Process="chopped"/>
        without oil until soft.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="150" Unit="g" Name="mushrooms" Process="chopped"/>
        and
        fry until soft.
      </Stage>
      <Stage>
        Stir in
        <Dairy Quantity="100" Unit="ml" Name="double cream" />,
        warm
        and
        then add the drained pasta.
      </Stage>
      <Stage>
        Warm and sprinkle with
        <Grocery Quantity="50" Unit="g" Name="grated parmesan" />.
      </Stage>
    </Recipe>

    <Recipe Title="Tuna and rice" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="400" Unit="g" Name="onions" Process="chopped"/>
        <Vegetable Quantity="150" Unit="g" Name="red peppers" Process="chopped"/>,
        and
        <Vegetable Quantity="150" Unit="g" Name="green peppers" Process="chopped"/>
        until done.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="150" Unit="g" Name="canned tuna fish" />
        and the rice.
      </Stage>
    </Recipe>

    <Recipe Title="Smash and cheese" Meals="1">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Meat Quantity="100" Unit="g" Name="bacon" Process="chopped"/>.
      </Stage>
      <Stage>
        In a <Utensil Name="pan" /> mix
        <Grocery Quantity="175" Unit="g" Name="smash" />
        and
        <Water Quantity="800" Unit="ml" Name="water" Process="boiling"/>.
      </Stage>
      <Stage>
        Stir in
        <Dairy Quantity="100" Unit="g" Name="cheese" Process="grated"/>
        and
        the bacon.
      </Stage>
    </Recipe>

    <Recipe Title="Vegetable pizza" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="200" Unit="g" Name="carrots" Process="chopped"/>,
        <Vegetable Quantity="200" Unit="g" Name="leeks" Process="chopped"/>
        and
        <Vegetable Quantity="250" Unit="g" Name="courgettes" Process="chopped"/>
        in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="75" Unit="g" Name="tomato puree" />
        and warm through.
      </Stage>
      <Stage>
        Layer on
        \gr{4*9}{inch}{pizza bases}{}
        and
        <Dairy Quantity="50" Unit="g" Name="mature cheese" Process="grated"/>
        and bake \med for 20 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Gammon rice" Meals="2">


      <Stage>
        In a <Utensil Name="pan" /> fry in
        <Check Quantity="2" Unit="tbsp" Name="oil" />,
        <Vegetable Quantity="400" Unit="g" Name="onions" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Meat Quantity="225" Unit="g" Name="smoked gammon" Process="shredded"/>
        and cook until brown.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="350" Unit="g" Name="rice" />,
        <Check Quantity="1" Unit="" Name="stock cube" />,
        <Water Quantity="900" Unit="ml" Name="water" />,
        <Grocery Quantity="325" Unit="g" Name="canned sweetcorn" />,
        <Check Quantity="1" Unit="tsp" Name="ground turmeric" />,
        boil,
        then simmer for 15 minutes.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="175" Unit="g" Name="frozen peas" />
        and simmer for 5 minutes.
      </Stage>
      <Stage>
        In a dry <Utensil Name="wok" /> roast
        <Grocery Quantity="50" Unit="g" Name="unsalted peanuts" />
        until brown,
        and sprinkle on top before serving.
      </Stage>
    </Recipe>

    <Recipe Title="Tagliatelle and cheese" Meals="1">
      <Stage>
        <Staple Name="tagliatelli"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="2" Unit="cloves" Name="garlic" Process="crushed"/>
        and
        <Vegetable Quantity="150" Unit="g" Name="green peppers" Process="chopped"/>
        until soft,
        then mash.
      </Stage>
      <Stage>
        Stir in
        <Dairy Quantity="200" Unit="g" Name="cottage cheese" />,
        <Dairy Quantity="200" Unit="g" Name="gorgonzola" Process="grated"/>
        and
        <Check Quantity="50" Unit="g" Name="grated parmesan" />
        and warm.
      </Stage>
    </Recipe>

    <Recipe Title="Spaghetti bolognese" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> fry in <Check Quantity="2" Unit="tbsp" Name="oil"/>
        <Meat Quantity="200" Unit="g" Name="minced meat" />,
        <Meat Quantity="100" Unit="g" Name="bacon" Process="chopped"/>,
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>
        and
        <Vegetable Quantity="200" Unit="g" Name="leeks" Process="chopped"/>
        until the meat is done.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="1" Unit="cube" Name="stock" Process="crumbled"/>,
        <Check Quantity="1" Unit="tsp" Name="oregano" />,
        <Vegetable Quantity="200" Unit="g" Name="tomatoes" Process="chopped"/>,
        <Grocery Quantity="400" Unit="g" Name="can tomatoes" Process="chopped"/>
        <Grocery Quantity="75" Unit="g" Name="tomato puree" />
        <Vegetable Quantity="150" Unit="g" Name="red pepper" Process="chopped"/>,
        <Vegetable Quantity="150" Unit="g" Name="green pepper" Process="chopped"/>,
        <Vegetable Quantity="200" Unit="g" Name="carrots" Process="chopped"/>
        <Vegetable Quantity="250" Unit="g" Name="courgette" Process="chopped"/>
        simmer 40 minutes.
      </Stage>
      <Stage>
        <Staple Name="spaghetti"/>
      </Stage>
    </Recipe>

    <Recipe Title="Pepper risotto" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="1" Unit="" Name="red chilli" Process="chopped"/>,
        <Vegetable Quantity="150" Unit="g" Name="red peppers" Process="chopped"/>,
        <Vegetable Quantity="150" Unit="g" Name="green peppers" Process="chopped"/>,
        <Vegetable Quantity="400" Unit="g" Name="onion" Process="chopped"/>
        in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        until onions soft.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="75" Unit="ml" Name="sherry" />,
        <Vegetable Quantity="150" Unit="g" Name="tomatoes" Process="chopped"/>,
        <Check Quantity="1" Unit="" Name="stock cube" Process="crumbled"/>,
        <Grocery Quantity="2" Unit="tbsp" Name="grated parmesan" />,
        <Grocery Quantity="400" Unit="g" Name="rice" />
        and
        <Water Quantity="750" Unit="ml" Name="water" />.
        Bring to a boil and stand until rice done.
      </Stage>
    </Recipe>

    <Recipe Title="Cashew and pea curry" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="bowl" /> blend
        <Check Quantity="5" Unit="" Name="cloves" />,
        <Check Quantity="1" Unit="tbsp" Name="curry powder" />,
        <Vegetable Quantity="4" Unit="cm" Name="ginger" Process="chopped"/>,
        <Grocery Quantity="125" Unit="g" Name="cashew nuts" Process="chopped" />,
        <Check Quantity="2" Unit="tbsp" Name="poppy seeds" />,
        <Water Quantity="150" Unit="ml" Name="water" />
        and
        <Vegetable Quantity="1" Unit="" Name="green chilli" Process="chopped"/>.
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>,
        and
        <Vegetable Quantity="2" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="3" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in the blended spices
        and
        <Grocery Quantity="1" Unit="tbsp" Name="raisins" />
        and warm through.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="110" Unit="g" Name="frozen peas" />,
        <Vegetable Quantity="100" Unit="g" Name="mushrooms" />,
        <Dairy Quantity="200" Unit="ml" Name="creme fraiche" />,
        <Dairy Quantity="4" Unit="tbsp" Name="yoghurt" />
        and
        <Water Quantity="150" Unit="ml" Name="water" />
        and simmer for 5 minutes.
      </Stage>
      <Stage>
        Sprinkle
        <Grocery Quantity="125" Unit="g" Name="cashew nuts" Process="chopped" />
        on top.
      </Stage>
    </Recipe>

    <Recipe Title="Meat and bean stew" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        fry
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>,
        <Vegetable Quantity="4" Unit="cloves" Name="garlic" Process="crushed"/>
        and
        <Meat Quantity="400" Unit="g" Name="minced meat" />
        until meat is done.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="canned kidney beans" Process="drained"/>,
        <Grocery Quantity="400" Unit="g" Name="canned chickpeas" Process="drained"/>,
        <Check Quantity="1" Unit="tsp" Name="mustard" />,
        <Grocery Quantity="150" Unit="g" Name="tomato puree" />,
        <Check Quantity="1" Unit="tsp" Name="ground cumin" />
        and
        <Check Quantity="75" Unit="ml" Name="sherry" />.
        Put in a <Utensil Name="casserole" />
        cover and bake \med for 30 minutes.
      </Stage>
      <Stage>
        <Staple Name="potatoes"/>
      </Stage>
    </Recipe>

    <Recipe Title="Cheesey beans in pitta" Meals="1">
      <Stage>
        <Grocery Quantity="400" Unit="g" Name="baked beans" />,
        <Grocery Quantity="4" Name="pitta bread" Process="warmed"/>
        and
        <Dairy Quantity="50" Unit="g" Name="cheese" Process="grated"/>.
      </Stage>
    </Recipe>

    <Recipe Title="Carrot and parsnip curry" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="2" Unit="cloves" Name="garlic" Process="crushed"/>,
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>
        and
        <Vegetable Quantity="1" Unit="" Name="green chilli" Process="chopped"/>
        in
        <Check Quantity="4" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="250" Unit="g" Name="cauliflower" Process="flourettes"/>,
        <Vegetable Quantity="350" Unit="g" Name="carrots" Process="sliced"/>
        and
        <Vegetable Quantity="300" Unit="g" Name="parsnips" Process="chopped"/>
        and simmer until soft.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="2" Unit="tbsp" Name="curry powder" />,
        <Check Quantity="1" Unit="tsp" Name="ground turmeric" />
        and
        <Vegetable Quantity="4" Unit="cm" Name="ginger" Process="chopped"/>
        and
        cook for 2 minutes.
      </Stage>
      <Stage>
        Stir in
        <Dairy Quantity="300" Unit="ml" Name="greek yoghurt" />,
        <Water Quantity="200" Unit="ml" Name="water" />
        and
        <Grocery Quantity="50" Unit="g" Name="ground almonds" />
        and warm through.
      </Stage>
    </Recipe>

    <Recipe Title="Courgette tagliatelli" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        slowly fry
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>
        until done.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="400" Unit="g" Name="courgette" Process="sliced"/>
        and cook slowly for 20 minutes.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="frozen peas" />
        and warm through.
      </Stage>
      <Stage>
        <Staple Name="tagliatelli"/>
        Add to the onions and courgettes.
      </Stage>
      <Stage>
        In a <Utensil Name="bowl" /> beat
        <Dairy Quantity="2" Name="egg"/> and
        <Dairy Quantity="50" Unit="g" Name="parmesan" Process="grated" />.
        Stir into the tagliatelli and courgettes
        and warm through.        
      </Stage>
    </Recipe>

    <Recipe Title="Muffin pizzas" Meals="1">
      <Stage>
        Grill
        <Grocery Quantity="8" Unit="" Name="muffins" />
        until brown.
      </Stage>
      <Stage>
        Top with
        <Grocery Quantity="75" Unit="g" Name="tomato puree" />,
        <Vegetable Quantity="100" Unit="g" Name="mushrooms" Process="sliced"/>,
        <Grocery Quantity="150" Unit="g" Name="sweet corn" />,
        <Grocery Quantity="150" Unit="g" Name="canned tuna fish" />
        and
        <Dairy Quantity="100" Unit="g" Name="cheese" Process="grated"/>.
      </Stage>
    </Recipe>

    <Recipe Title="Potato and bacon omelette" Meals="2">

      <Stage>
        In a <Utensil Name="pan" /> boil
        <Vegetable Quantity="1200" Unit="g" Name="potato" Process="sliced"/> then drain.
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="350" Unit="g" Name="onions" Process="chopped"/>
        and
        <Meat Quantity="150" Unit="g" Name="bacon" Process="chopped"/>
        in
        <Check Quantity="2" Unit="tbsp" Name="oil" />.
      </Stage>
      <Stage>
        Stir in the potatoes
        and
        <Dairy Quantity="50" Unit="g" Name="gruyere cheese" Process="grated"/>.
      </Stage>
      <Stage>
        Stir in
        <Dairy Quantity="4" Unit="" Name="eggs" Process="beaten"/>
        and cook until nearly done.
      </Stage>
      <Stage>
        Sprinkle on
        <Dairy Quantity="50" Unit="g" Name="cheddar cheese" Process="grated"/>
        and grill.
      </Stage>
    </Recipe>

    <Recipe Title="Chicken and cauliflower" Meals="2">
      <Stage>
        In a <Utensil Name="casserole" /> bake
        <Meat Quantity="400" Unit="g" Name="chicken pieces" />
        until done.
      </Stage>
      <Stage>
        Cover with
        <Vegetable Quantity="700" Unit="g" Name="cauliflower" Process="chopped"/>.
      </Stage>
      <Stage>
        In a <Utensil Name="bowl" /> mix
        <Grocery Quantity="400" Unit="g" Name="can chicken soup" />,
        <Grocery Quantity="0.5" Unit="cup" Name="sherry" />,
        <Check Quantity="1" Unit="tsp" Name="curry powder" />
        and
        juice of
        <Vegetable Quantity="1" Unit="" Name="lemon" />
        and pour over the cauliflower
        and bake \med for 30 minutes.
      </Stage>
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
    </Recipe>

    <Recipe Title="Cheese and tomato omelette" Meals="1">
      <Stage>
        <Dairy Quantity="4" Unit="" Name="eggs" Process="beaten"/>,
        <Vegetable Quantity="6" Unit="" Name="tomatoes" Process="chopped"/>
        and
        <Dairy Quantity="50" Unit="g" Name="mature cheese" Process="grated"/>.
      </Stage>
    </Recipe>

    <Recipe Title="Spaghetti and rocket" Meals="1">
      <Stage>
        <Staple Name="spaghetti"/>
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="200" Unit="g" Name="rocket" Process="chopped"/>
        and
        <Dairy Quantity="50" Unit="g" Name="butter" />.
      </Stage>
      <Stage>
        Sprinkle on
        <Check Quantity="20" Unit="g" Name="grated parmesan" />.
      </Stage>
    </Recipe>

    <Recipe Title="Liver and sausage casserole" Meals="2">
      <Stage>
        In a <Utensil Name="casserole" /> mix
        <Meat Quantity="125" Unit="g" Name="sausages" Process="chopped"/>,
        <Meat Quantity="350" Unit="g" Name="liver" Process="chopped"/>,
        <Vegetable Quantity="200" Unit="g" Name="onions" Process="chopped"/>,
        <Grocery Quantity="300" Unit="g" Name="canned tomato soup" />,
        <Check Quantity="2" Unit="tbsp" Name="worcestershire sauce" />,
        <Check Quantity="1" Unit="tsp" Name="vinegar" />,
        <Check Quantity="1" Unit="tsp" Name="mustard" />
        and
        bake <Temperature Level="medium"/> for 60 minutes.
      </Stage>
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
    </Recipe>

    <Recipe Title="Fish chowder" Meals="2">
      <Stage>
        In a <Utensil Name="pan" /> in
        <Water Quantity="400" Unit="ml" Name="water" />
        boil
        <Vegetable Quantity="1000" Unit="g" Name="potatoes" Process="cubed"/>
        for 10 minutes,
        then drain.
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Meat Quantity="100" Unit="g" Name="bacon" />
        and
        <Vegetable Quantity="500" Unit="g" Name="onions" Process="chopped"/>
        until bacon done.
      </Stage>
      <Stage>
        Stir in
        <Meat Quantity="300" Unit="g" Name="fish" Process="chopped"/>
        and
        <Grocery Quantity="400" Unit="g" Name="sweet corn" />
        and simmer for 10 minutes.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="2" Unit="tbsp" Name="flour" />
        until absorbed
        and then stir in
        <Dairy Quantity="500" Unit="ml" Name="milk" />
        to make a sauce.
      </Stage>
      <Stage>
        Then stir the potatoes into the sauce.
      </Stage>
    </Recipe>

    <Recipe Title="Scramble egg and peppers" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="2" Unit="cloves" Name="garlic" Process="crushed"/>,
        <Vegetable Quantity="500" Unit="g" Name="onions" Process="chopped"/>,
        <Vegetable Quantity="300" Unit="g" Name="green peppers" Process="sliced"/>
        and
        <Meat Quantity="200" Unit="g" Name="bacon" Process="chopped"/>
        in
        <Dairy Quantity="20" Unit="g" Name="butter" />
        and
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        until onions are soft.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="canned tomatoes" Process="chopped"/>,
        <Check Quantity="2" Unit="tbsp" Name="dried basil" />
        and
        simmer for 5 minutes.
      </Stage>
      <Stage>
        Place in a <Utensil Name="casserole"/>,
        then pour on <Dairy Quantity="4" Name="eggs" Process="beaten"/>
        and bake <Temperature Level="medium"/> for 20 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Paprika pork" Meals="2">
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        fry
        <Vegetable Quantity="400" Unit="g" Name="onions" Process="chopped"/>,
        <Vegetable Quantity="3" Unit="cloves" Name="garlic" Process="crushed"/>
        and
        <Meat Quantity="400" Unit="g" Name="pork" Process="cubed"/>
        until the pork is done.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="2" Unit="tbsp" Name="flour" />
        and
        <Check Quantity="2" Unit="tsp" Name="paprika" />.
      </Stage>
      <Stage>
        Stir in
        <Vegetable Quantity="2" Unit="" Name="red peppers" Process="chopped"/>,
        <Check Quantity="1" Unit="cube" Name="stock" Process="crumbled"/>,
        and
        <Water Quantity="500" Unit="ml" Name="water" />
        and simmer until done.
      </Stage>
      <Stage>
        Pour on
        <Dairy Quantity="150" Unit="ml" Name="natural yoghurt" />
        before serving.
      </Stage>
    </Recipe>

    <Recipe Title="Potatoes Swedish style" Meals="2">
      <Stage>
        In a <Utensil Name="casserole" /> layer
        <Vegetable Quantity="2000" Unit="g" Name="potatoes" Process="sliced"/>,
        <Vegetable Quantity="350" Unit="g" Name="onions" Process="chopped"/>,
        <Grocery Quantity="50" Unit="g" Name="capers" />,
        <Grocery Quantity="200" Unit="g" Name="anchovy fillets" />,
        <Vegetable Quantity="50" Unit="g" Name="spring onions" Process="chopped"/>
        and
        <Vegetable Quantity="25" Unit="g" Name="butter" />.
      </Stage>
      <Stage>
        Pour over
        <Dairy Quantity="300" Unit="ml" Name="single cream" />.
      </Stage>
      <Stage>
        Sprinkle with
        <Grocery Quantity="4" Unit="tbsp" Name="bread crumbs" />.
      </Stage>
      <Stage>	Bake <Temperature Level="medium"/> for 50 minutes.</Stage>
    </Recipe>

    <Recipe Title="Spaghetti Hoops" Meals="1">
      <Stage>
        In a <Utensil Name="pan" /> warm
        <Grocery Quantity="400" Unit="g" Name="canned spaghetti hoops" />
        and serve on
        <Grocery Quantity="4" Unit="slices" Name="granary bread" />.
      </Stage>
    </Recipe>

    <Recipe Title="Fish Curry" Meals="2">
      <Stage>
        In a <Utensil Name="casserole" /> mix
        <Meat Quantity="500" Unit="g" Name="fish" Process="chopped"/>,
        <Vegetable Quantity="350" Unit="g" Name="onions" Process="chopped"/>,
        <Vegetable Quantity="200" Unit="g" Name="apples" Process="chopped"/>,
        <Grocery Quantity="2" Unit="tbsp" Name="tomato puree" />,
        \gr{2}{tbsp}{pickle/chutney}{},
        <Grocery Quantity="400" Unit="g" Name="canned tomatoes" Process="chopped"/>
        and
        <Check Quantity="1" Unit="tbsp" Name="curry powder" />,
        bake \med for 30 minutes.
      </Stage>
      <Stage>
        <Staple Name="couscous"/>
      </Stage>
    </Recipe>

    <Recipe Title="Penang Rice Noodles" Meals="2">
      <Stage>
        In a pan soak
        <Grocery Quantity="400" Unit="g" Name="rice noodles" />
        in
        <Water Quantity="1" Unit="l" Name="water" Process="warm"/>
        for 25 minutes then drain.
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> in
        <Grocery Quantity="2" Unit="tbsp" Name="oil" />
        fry
        <Vegetable Quantity="2" Unit="cloves" Name="garlic" Process="crushed"/>,
        <Vegetable Quantity="300" Unit="g" Name="onions" Process="sliced"/>,
        <Vegetable Quantity="100" Unit="g" Name="spring onions" Process="chopped"/>,
        <Vegetable Quantity="200" Unit="g" Name="chinese green leafs" Process="hacked"/>
        and
        <Vegetable Quantity="100" Unit="g" Name="chives" Process="chopped"/>
        until wilted.
      </Stage>
      <Stage>
        Add the noodles,
        <Grocery Quantity="2" Unit="tbsp" Name="soy sauce" />,
        <Grocery Quantity="1" Unit="tbsp" Name="dry sherry" />,
        <Grocery Quantity="2" Unit="tbsp" Name="oyster sauce" />
        and
        <Grocery Quantity="1" Unit="tbsp" Name="sesame oil" />
        and warm through.
      </Stage>
    </Recipe>

    <Recipe Title="Egg Curry" Meals="2">
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="350" Unit="g" Name="onions" Process="chopped"/>
        and
        <Vegetable Quantity="3" Unit="cloves" Name="garlic" Process="crushed"/>
        in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        until soft.
      </Stage>
      <Stage>
        Stir in
        <Check Quantity="1" Unit="tbsp" Name="curry powder" />
        and warm through.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="150" Unit="g" Name="tomato puree" />,
        <Water Quantity="350" Unit="ml" Name="cold water"/>
        and
        <Grocery Quantity="400" Unit="g" Name="canned tomatoes" Process="chopped"/>
        and simmer 20 minutes.
      </Stage>
      <Stage>
        <Staple Name="rice brown"/>
      </Stage>
      <Stage>
        Break
        <Dairy Quantity="4" Unit="" Name="eggs" />
        into the curry and simmer until set.
      </Stage>
    </Recipe>

    <Recipe Title="Meat and Pasta Stew" Meals="2">
      <Stage>
        In a <Utensil Name="pan" /> fry
        <Meat Quantity="400" Unit="g" Name="meat" Process="chopped"/>
        in
        <Check Quantity="2" Unit="tbsp" Name="oil" />
        until done.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="canned tomatoes" Process="chopped"/>,
        <Vegetable Quantity="400" Unit="g" Name="carrots" Process="chopped"/>,
        <Water Quantity="500" Unit="ml" Name="water" />,
        <Check Quantity="10" Unit="tbsp" Name="sherry" />
        and
        <Check Quantity="1" Unit="" Name="stock cube" Process="crumbled"/>
        and simmer for 20 minutes.
      </Stage>
      <Stage>
        Stir in
        <Grocery Quantity="400" Unit="g" Name="pasta shells" />
        simmer for 15 minutes.
      </Stage>
      <Stage>
        Stir in 
        <Vegetable Quantity="800" Unit="g" Name="frozen peas" />
        and simmer for 5 minutes.
      </Stage>
    </Recipe>

    <Recipe Title="Sausage Spaghetti" Meals="2">
      <Stage>
        <Staple Name="spaghetti"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> simmer
        <Vegetable Quantity="1" Unit="clove" Name="garlic" Process="crushed"/>,
        <Check Quantity="2" Unit="tbsp" Name="oil" />,
        <Grocery Quantity="150" Unit="ml" Name="wine" />,
        <Grocery Quantity="150" Unit="g" Name="tomato puree" />,
        <Check Quantity="1" Unit="tsp" Name="mixed herbs" />,
        <Grocery Quantity="400" Unit="g" Name="canned tomatoes" Process="chopped"/>
        and
        <Meat Quantity="400" Unit="g" Name="sausages" Process="chopped"/>
        until sausages done.
      </Stage>
    </Recipe>

    <Recipe Title="Chilli Spaghetti" Meals="1">
      <Stage>
        <Staple Name="spaghetti"/>
      </Stage>
      <Stage>
        In a <Utensil Name="wok" /> fry
        <Vegetable Quantity="1" Unit="" Name="chilli" Process="chopped"/>,
        <Vegetable Quantity="1" Unit="clove" Name="garlic" Process="crushed"/>
        in
        <Vegetable Quantity="1" Unit="tbsp" Name="olive oil" />
        and
        <Vegetable Quantity="25" Unit="g" Name="butter" />
        for 1 minute.
      </Stage>
      <Stage>
        Stir in
        the juice of
        <Vegetable Quantity="1" Unit="" Name="lemon" />
        and
        <Check Quantity="1" Unit="tsp" Name="basil" />.
      </Stage>
    </Recipe>

